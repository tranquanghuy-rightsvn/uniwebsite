<div class="wrapper-user">
  <div class="form-user">
    <h2>Đăng nhập</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mb-3">
        <div class="input-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mật khẩu", class: "form-control" %>
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
        </div>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Đăng nhập", class: "btn btn-primary btn-user" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
